    "# Create function to calculate t-values\n",
    "\n",
    "t_values = []\n",
    "for index, row in df.iterrows():\n",
    "    t = (row['y1'] - row['y2']) / ((row['s1']**2 /row['N1'] + row['s2']**2 / row['N2'])**0.5)\n",
    "    t_values.append(t)\n",
    "    \n",
